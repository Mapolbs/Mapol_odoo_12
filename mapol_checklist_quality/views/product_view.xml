<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- product template -->
	<record id="product_template_form_view_inherit_checklist_quality" model="ir.ui.view">
		<field name="name">product.template.common.form</field>
		<field name="model">product.template</field>
		<field name="inherit_id"
			ref="product.product_template_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='uom_po_id']" position="after">
				<!-- <field name="checklist_category_id"/> -->
				<field name="is_quality_required"/>
			</xpath>
		</field>
	</record>
	<!-- stock view -->
	<record model="ir.ui.view" id="view_picking_quality_inherit">
			<field name="name">view_picking_quality_inherit</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form"/>
			<field name="arch" type="xml">
				<xpath expr="//button[@name='do_unreserve']" position="after">
					<button name="quality_checked" type="object" string="Quality Checked" attrs="{'invisible': ['|',('state','in', ('done','cancel')),('picking_type_code', '!=', 'incoming')]}"/>
				</xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_uom']" position="after">
                    <button name="quality_checklist"
                        type="object" 
                        class="oe_highlight oe_right" 
                        string="Quality Checklist" 
                        attrs="{'invisible': ['|','|','|',('state','in', ('done','cancel')),('parent.picking_type_code', '!=', 'incoming'),('checklist_main_id','!=',False),('parent.gate_entry_check','=',False)]}"/>
                    <field name="checklist_main_id" invisible="1"/>
                </xpath>
	        </field>
		</record>  
</odoo>