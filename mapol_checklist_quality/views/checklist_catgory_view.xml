<?xml version="1.0"?>
<odoo>

	<record id="view_checklist_set_tree" model="ir.ui.view">
		<field name="name">checklist.set.tree</field>
		<field name="model">checklist.set</field>
		<field name="priority">2</field>
		<field name="arch" type="xml">
			<tree string="Checklist Set">
				<field name="name" />
				<!-- <field name="checklist_category_id" /> -->
				<field name="product_id"/>
				<field name="description" />
				<!-- <field name="remarks" /> -->
			</tree>
		</field>
	</record>

	<record id="view_checklist_set_form" model="ir.ui.view">
		<field name="name">checklist.set.form</field>
		<field name="model">checklist.set</field>
		<field name="arch" type="xml">
			<form string="Checklist Set">
				<sheet>
					<group>
						<group>
							<field name="name" string="Question" placeholder="Question"/>
							
							<!-- <field name='checklist_category_id'/> -->
						</group>
						<group>
							<field name="product_id"/>
							<!-- <field name="description" />
							<field name="remarks" /> -->
						</group>
					</group>
					<group>
						<group>
							<field name="type" widget="radio"/>
						</group>
						<group>
							<div class="col-lg-6 offset-lg-3 o_preview_questions">
	                            <!-- Multiple Lines Text Zone -->
		                        <div attrs="{'invisible': [('type', '!=', 'numeric')]}">
		                        	<i class="fa fa-2x" role="img" aria-label="Numeric" title="Numeric">123...</i>
		                        </div>
		                        <div attrs="{'invisible': [('type', '!=', 'image')]}">
		                        	<i class="fa fa-picture-o fa-2x" role="img" aria-label="Image" title="Image"></i>
		                        </div>
		                        <div attrs="{'invisible': [('type', '!=', 'descriptive')]}">
		                        	<i class="fa fa-2x" role="img" aria-label="Descriptive" title="Descriptive">abcd...</i>
		                        </div>
	                        </div>
						</group>
					</group>
					<group>
						<group>
							<field name="max_value" attrs="{'invisible':[('type','!=','numeric')],'required':[('type','=','numeric')]}"/>
							<field name="image" widget="image" options="{&quot;preview_image&quot;:&quot;image_medium&quot;}" attrs="{'invisible':[('type','!=','image')],'required':[('type','=','image')]}"/>
						</group>
						<group>
							<field name="min_value" attrs="{'invisible':[('type','!=','numeric')],'required':[('type','=','numeric')]}"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="action_checklist_set_menu"
		model="ir.actions.act_window">
		<field name="name">Checklist Set</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">checklist.set</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Click here to create a record
			</p>
		</field>
	</record>
<menuitem id="checklist_category_menu_view" name="Quality Checklist" parent="stock.menu_stock_inventory_control" sequence="6" />

		<menuitem id="menu_checklist_set_view" name="Checklist Set"
		action="action_checklist_set_menu" parent="checklist_category_menu_view"
		sequence="2" />

</odoo>